    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>
    
    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity EquipoEmpresas.
    -->
    <changeSet id="20190429153754-1" author="jhipster">
        <createTable tableName="equipo_empresas">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nombre" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="telefono" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="correo" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="direccion" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="descripcion" type="clob">
                <constraints nullable="true" />
            </column>

            <column name="logos" type="longblob">
                <constraints nullable="true" />
            </column>
            <column name="logos_content_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="pagina_web" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="facturacion_id" type="bigint">
                <constraints unique="true" nullable="true" uniqueConstraintName="ux_equipo_empresas_facturacion_id" />
            </column>            <column name="perfil_equipo_empresa_id" type="bigint">
                <constraints unique="true" nullable="true" uniqueConstraintName="ux_equipo_empresas_perfil_equipo_empresa_id" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        
    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
